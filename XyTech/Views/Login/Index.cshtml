@model XyTech.Models.tb_user

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Akmal Rentals</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Content/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Content/assets/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico" />
</head>
<body>
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center" style="padding-left:20px;">
            <a class="navbar-brand brand-logo mr-6" href="@Url.Action("Index","Home")"><img src="~/Content/assets/images/logo-word.png" class="mr-2" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","Home")"><img src="~/Content/assets/images/logo1.png" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end"></div>
    </nav>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light align-content-center py-5 px-4 px-sm-5">
                            <div class="brand-logo" style="display:flex; justify-content:center">
                                <img src="~/Content/assets/images/logo1.png" alt="logo">
                            </div>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                        <form class="pt-3">
                            <div class="form-group">
                                @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control form-control-lg", @placeholder = "Username", @required=true } })
                                @Html.ValidationMessageFor(model => model.u_username, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.EditorFor(model => model.u_pwd, new { htmlAttributes = new { @class = "form-control form-control-lg", @placeholder = "Password", @required=true } })
                                @Html.ValidationMessageFor(model => model.u_pwd, "", new { @class = "text-danger" })
                            </div>

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>

                            <div class="mt-3">
                                <input type="submit" value="Login" class="btn btn-block btn-warning btn-lg font-weight-medium auth-form-btn" />
                            </div>

                        </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021.  Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ml-1"></i></span>
        </div>
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Distributed by <a href="https://www.themewagon.com/" target="_blank">Themewagon</a></span>
        </div>
    </footer>
</body>
</html>
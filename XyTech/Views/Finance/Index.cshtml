@model IEnumerable<XyTech.Models.tb_finance>

<h2>Finance</h2>

<p>
    @Html.ActionLink("New Transaction", "Create")
</p>
<div class="card">
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    Transaction ID
                </th>
                <th>
                    Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Inflow/Outflow
                </th>
                <th>
                    Bank/Cash
                </th>
                <th>
                    Details
                </th>
                <th>
                    User-in-charge
                </th>
                <th>
                    Floor ID
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_transaction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_transactiontype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_paymentmethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.f_receipt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_user.u_pwd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_floor.fl_bid)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.f_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.f_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.f_id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
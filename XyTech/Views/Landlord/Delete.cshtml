@model XyTech.Models.tb_landlord

@{
    ViewBag.Title = "Delete";
}

<div align="center">
    <div align="left" class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Landlord</h4>
                <p class="card-description">
                    Are you sure to delete this landlord?
                </p>
                <!--<hr />-->
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <tbody>
                            <tr>
                                <th class="col-3">
                                    Name
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.l_name)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Contact Number
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.l_phone)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Amount of Rental (RM)
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.l_fee)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Rental Due (DD-MM-YYYY)
                                </th>

                                <td class="col-6">
                                    @Html.Raw(Model.l_due.ToString("dd/MM/yyyy"))
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Bank
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.tb_bankname.bn_description)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Bank Account Number
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.l_bank)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                @using (Html.BeginForm("Delete", "Landlord", new { id = Model.l_id }, FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Button to trigger the delete confirmation -->
                    <button type="button" class="btn btn-danger" id="deleteButton">Delete</button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })
                    <div id="confirmDeleteModal" style="display: none;">
                        <p>Are you sure you want to delete this landlord?</p>
                    </div>
                }

            </div>
</div>
</div>
</div>

<script>
    // JavaScript code using SweetAlert
    document.addEventListener("DOMContentLoaded", function () {
        var deleteButton = document.getElementById('deleteButton');

        // Show the confirmation modal when deleteButton is clicked
        deleteButton.addEventListener('click', function () {
            swal({
                title: "Confirm Delete",
                text: "Are you sure you want to delete this transaction?",
                icon: "warning",
                buttons: ["Cancel", "Delete"],
                dangerMode: true,
            }).then((confirmed) => {
                if (confirmed) {
                    // Proceed with the deletion
                    var form = document.getElementById('deleteForm');
                    form.submit();
                }
            });
        });
    });

</script>
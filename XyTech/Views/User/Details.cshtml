@model XyTech.Models.tb_user

@{
    ViewBag.Title = "Details";
}

<div align="center">
    <div align="left" class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User</h4>
                <p class="card-description">
                    Details of user
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <tbody>
                            <tr>
                                <th>
                                    User ID
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_id)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Username
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_username)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Email
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_email)                                   
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Phone Number
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_phone)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    User Type
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_usertype)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    User Status
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_active)
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                <div style="margin-top: 25px;">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.u_id }, new { @class = "btn btn-primary mr-2" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })

                </div>
            </div>
        </div>
    </div>
</div>

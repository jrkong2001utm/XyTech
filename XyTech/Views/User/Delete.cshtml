@model XyTech.Models.tb_user

@{
    ViewBag.Title = "Delete";
}

<div align="center">
    <div align="left" class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User</h4>
                <p class="card-description">
                    Details of user
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <tbody>
                            <tr>
                                <th>
                                    User ID
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_id)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Username
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_username)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Email
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_email)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Phone Number
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_phone)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    User Type
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_usertype)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    User Status
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.u_active)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div style="margin-top: 25px;">
                    @using (Html.BeginForm("Delete", "User", new { id = Model.u_id }, FormMethod.Post, new { id = "deleteForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <button type="button" class="btn btn-danger" id="deleteButton">Delete</button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })
                        <div id="confirmDeleteModal" style="display: none;">
                            <p>Are you sure you want to delete this user?</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript code using SweetAlert
    document.addEventListener("DOMContentLoaded", function () {
        var deleteButton = document.getElementById('deleteButton');

        // Show the confirmation modal when deleteButton is clicked
        deleteButton.addEventListener('click', function () {
            swal({
                title: "Confirm Delete",
                text: "Are you sure you want to delete this user?",
                icon: "warning",
                buttons: ["Cancel", "Delete"],
                dangerMode: true,
            }).then((confirmed) => {
                if (confirmed) {
                    // Proceed with the deletion
                    var form = document.getElementById('deleteForm');
                    form.submit();
                }
            });
        });
    });

</script>
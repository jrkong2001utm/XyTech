@model IEnumerable<XyTech.Models.tb_attendance>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <p class="card-title mb-0" style="font-size: x-large;">Attendance</p>

                @Html.ActionLink("Create", "Create", "Attendance", null, new { @class = "btn btn-success btn-rounded btn-fw" })

            </div>
            <table class="table table-hover" >

                <thead>
                    <tr>
                        <th>Date and Time</th>
                        <th>Floor ID</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.a_check)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a_floor)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.a_id })" class="btn btn-link" title="edit">
                                    <i class="fa fa-edit text-primary"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.a_id })" class="btn btn-link" title="delete">
                                    <i class="fa fa-trash text-danger"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

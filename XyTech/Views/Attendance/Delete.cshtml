@model XyTech.Models.tb_attendance

@{
    ViewBag.Title = "Delete Attendance";
}

<<div align="center">
    <div align="left" class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Attendance</h4>
                <p class="card-description">
                    Are you sure you want to delete this attendance?
                </p>
                <!--<hr />-->
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <tbody>
                            <tr>
                                <th class="col-3">
                                    Attendance ID
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.a_id)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Floor Name
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.tb_floor.fl_bname)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Date
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.a_check)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color" style="margin-top: 25px;">
                        <input type="submit" value="Delete" class="btn btn-danger btn-rounded btn-fw" onclick="return confirm('Are you sure to delete this attendance?');" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })
                    </div>
                }

            </div>
        </div>
    </div>
</div>

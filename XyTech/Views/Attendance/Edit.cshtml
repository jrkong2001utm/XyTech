@model XyTech.Models.tb_attendance

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Attendance</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.a_id)

        <div class="form-group">
            @Html.LabelFor(model => model.a_floor, "Floor Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("a_floor", null, htmlAttributes: new { @class = "form-control", selected = "true" })
                @Html.ValidationMessageFor(model => model.a_floor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="a_check" class="control-label col-md-2">Date</label>
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.a_check, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off", required = "required" } })
                @Html.ValidationMessageFor(model => model.a_check, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script>
        // Display pop-up window with error message
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                $(document).ready(function() {
                    alert('@TempData["ErrorMessage"]');
                });
            </text>
        }
    </script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ready(function () {
            $('#a_check').datepicker({
                dateFormat: "dd/MM/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0",
                minDate: "0D"
            });

        });
    </script>



}

@model XyTech.Models.tb_investor

@{
    ViewBag.Title = "Delete";
}

<<div align="center">
    <div align="left" class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Investor</h4>
                <p class="card-description">
                    Are you sure you want to delete this investor?
                </p>
                <!--<hr />-->
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <tbody>
                            <tr>
                                <th class="col-3">
                                    Username
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.tb_user.u_username)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Investor ID
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.i_id)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Lot ID
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.i_lot)
                                </td>
                            </tr>

                            <tr>
                                <th class="col-3">
                                    Amount (RM)
                                </th>

                                <td class="col-6">
                                    @Html.DisplayFor(model => model.i_amount)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color" style="margin-top: 25px;">
                        <input type="submit" value="Delete" class="btn btn-danger btn-rounded btn-fw" onclick="return confirm('Are you sure to delete this investor?');" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })
                    </div>
                }

            </div>
        </div>
    </div>
</div>

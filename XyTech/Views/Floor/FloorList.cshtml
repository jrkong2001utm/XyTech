@model IEnumerable<XyTech.Models.tb_floor>

@{
    ViewBag.Title = "FloorList";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title mb-0" style="font-size: x-large;">List of Floors</p>

                    @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-success btn-rounded btn-fw" })

                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Building ID</th>
                                <th>Floor Level</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_bid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_address)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.fl_id }, new { @class = "btn btn-primary btn-rounded btn-fw" })
                                        @Html.ActionLink("Details", "Details", new { id = item.fl_id }, new { @class = "btn btn-dark btn-rounded btn-fw" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.fl_id }, new { @class = "btn btn-danger btn-rounded btn-fw" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        // Handle delete button click event
        $('.delete-button').click(function () {
            var id = $(this).data('id');

            if (confirm("Are you sure you want to delete this floor record?")) {
                // Send AJAX request to delete action
                $.ajax({
                    url: '@Url.Action("Delete", "FloorList")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            // Show success message popup
                            alert('Floor record deleted successfully!');
                            // Optionally, you can perform additional actions (e.g., remove the deleted record from the UI)
                        } else {
                            // Show error message popup
                            alert('Error deleting floor record.');
                        }
                    },
                    error: function () {
                        // Show error message popup
                        alert('Error deleting floor record.');
                    }
                });
            }
        });
    });
</script>

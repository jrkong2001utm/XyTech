@model IEnumerable<XyTech.Models.tb_floor>

@{
    ViewBag.Title = "FloorList";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (ViewBag.Message == "Floor has been updated successfully!")
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-1"></i>
                        <strong>Success!</strong> @ViewBag.Message

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (ViewBag.Message == "Floor has been created successfully!")
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-1"></i>
                        <strong>Success!</strong> @ViewBag.Message

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (ViewBag.Message == "Floor has been deleted successfully.")
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-1"></i>
                        <strong>Alert!</strong> @ViewBag.Message

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <p class="card-title mb-0" style="font-size: x-large;">List of Floors</p>

                    @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-success btn-rounded btn-fw" })

                </div>

                <br />

                <div class="table-responsive">
                    <table id="dataTable" class="display expandable-table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Building Name</th>
                                <th>Floor Level</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_bname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_bid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_address)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.fl_id })" class="btn btn-link" title="edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.fl_id })" class="btn btn-link" title="details">
                                            <i class="fa fa-info-circle text-info"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.fl_id })" class="btn btn-link" title="delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            jQuery('#dataTable').DataTable();
        });
    </script>
}
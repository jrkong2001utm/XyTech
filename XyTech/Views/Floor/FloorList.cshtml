@model IEnumerable<XyTech.Models.tb_floor>

@{
    ViewBag.Title = "FloorList";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (ViewBag.Message == " Floor has been updated successfully!")
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong>@ViewBag.Message
                        <button type="button" class="close" data-dismiss="alert">
                            <span class="mdi mdi-close"></span>
                        </button>
                    </div>
                }
                @if (ViewBag.Message == " Floor has been created successfully!")
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong>@ViewBag.Message
                        <button type="button" class="close" data-dismiss="alert">
                            <span class="mdi mdi-close"></span>
                        </button>
                    </div>
                }
                @if (ViewBag.Message == " Floor has been deleted successfully!")
                {
                    <div class="alert alert-danger">
                        <strong>Alert!</strong>@ViewBag.Message
                        <button type="button" class="close" data-dismiss="alert">
                            <span class="mdi mdi-close"></span>
                        </button>
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <p class="card-title mb-0" style="font-size: x-large;">List of Floors</p>

                    @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-success btn-rounded btn-fw" })

                </div>

                <br />

                <div class="table-responsive">
                    <table id="dataTable" class="display expandable-table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Floor Name</th>
                                <th>Address</th>
                                <th>Landlord Name</th>
                                <th style="text-align: center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_bname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fl_address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tb_landlord.l_name)
                                    </td>
                                    <td style="text-align: center">
                                        <a href="@Url.Action("Edit", new { id = item.fl_id })" class="btn btn-link" title="edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        @if (item.fl_id == 1)
                                        {
                                            <a href="@Url.Action("Details_DL1", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 2)
                                        {
                                            <a href="@Url.Action("Details_DL5", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 3)
                                        {
                                            <a href="@Url.Action("Details_GE1", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 4)
                                        {
                                            <a href="@Url.Action("Details_GE2", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 5)
                                        {
                                            <a href="@Url.Action("Details_GE3", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 6)
                                        {
                                            <a href="@Url.Action("Details_TN1", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 7)
                                        {
                                            <a href="@Url.Action("Details_TN2", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 8)
                                        {
                                            <a href="@Url.Action("Details_TN3", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else if (item.fl_id == 9)
                                        {
                                            <a href="@Url.Action("Details_TN4", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Details", new { id = item.fl_id })" class="btn btn-link" title="details">
                                                <i class="fa fa-info-circle text-info"></i>
                                            </a>
                                        }
                                        <a href="@Url.Action("Delete", new { id = item.fl_id })" class="btn btn-link" title="delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            jQuery('#dataTable').DataTable();
        });
    </script>
}
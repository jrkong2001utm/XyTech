@model IEnumerable<XyTech.Models.tb_floor>

@{
    ViewBag.Title = "Details_GE1";
}

<!DOCTYPE html>
<html>
<body>
    <p class="card-title mb-0" style="font-size: x-large; font-weight:bold">Floor Information</p>
    <br />
    <div>
        <img class="floorlayout" src="~/Content/assets/images/floor_layout_trim/GE1-1.jpeg" alt="DL1" usemap="#DL1map" width="300" height="800">

        <map name="DL1map">
            <area shape="rect" coords="52,48,121,129" alt="Room1" href="~/Views/Room/Details/30" id="r_id">
            <area shape="rect" coords="53,138,120,220" alt="Room2" href="~/Views/Room/Details/31" id="r_id">
            <area shape="rect" coords="53,231,150,286" alt="Room3" href="~/Views/Room/Details/32" id="r_id">
            <area shape="rect" coords="52,296,150,350" alt="Room4" href="~/Views/Room/Details/33" id="r_id">
            <area shape="rect" coords="55,361,137,417" alt="Room5" href="~/Views/Room/Details/34" id="r_id">
            <area shape="rect" coords="53,423,140,479" alt="Room6" href="~/Views/Room/Details/35" id="r_id">
            <area shape="rect" coords="55,487,139,539" alt="Room7" href="~/Views/Room/Details/36" id="r_id">
            <area shape="rect" coords="51,545,103,657" alt="Room8" href="~/Views/Room/Details/37" id="r_id">
            <area shape="rect" coords="108,571,161,657" alt="Room9" href="~/Views/Room/Details/38" id="r_id">
            <area shape="rect" coords="170,478,255,523" alt="Room10" href="~/Views/Room/Details/39" id="r_id">
            <area shape="rect" coords="170,425,257,471" alt="Room11" href="~/Views/Room/Details/40" id="r_id">
            <area shape="rect" coords="153,142,256,221" alt="Room12" href="~/Views/Room/Details/41" id="r_id">
            <area shape="rect" coords="155,45,216,140" alt="Room13" href="~/Views/Room/Details/42" id="r_id">
        </map>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample">
                        <div class="form-group row">
                            <label for="exampleInputUsername2" class="col-sm-4 col-form-label">Building Name</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_bname)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Floor Level</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_bid)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputMobile" class="col-sm-4 col-form-label">Address</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_address)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputPassword2" class="col-sm-4 col-form-label">Landlord Name</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_landlord)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">WiFi Password</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_wifipwd)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Modem IP</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_modemip)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">CCTV QR Code</label>
                            <div class="col-sm-7 col-form-label">
                                @Html.DisplayFor(modelItem => item.fl_cctvqr)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-auto">
                                @Html.ActionLink("Edit", "FloorList", null, new { @class = "btn btn-primary btn-rounded btn-fw" })
                            </div>
                            <div class="col-auto">
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-light btn-rounded btn-fw" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    }
</body>
</html>

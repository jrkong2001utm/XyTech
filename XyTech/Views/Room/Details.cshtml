@model XyTech.Models.tb_room

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<body>
    <div>
        <div class="floorlayout" width="300" height="800">
            <img src="@Url.Content("~/Content/assets/images/roomPicture/" + Model.r_pic)" alt="Uploaded Image"/>
            @Html.DisplayFor(model => model.r_pic)
        </div>
    </div>

    <div class="col-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Room Information</h4>
                <p class="card-description">
                    These are the information for the floor.
                </p>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-4 col-form-label">Room Number</label>
                        <div class="col-sm-7 col-form-label">
                            @Html.DisplayFor(model => model.r_no)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Floor Level</label>
                        <div class="col-sm-7 col-form-label">
                            @Html.DisplayFor(model => model.tb_floor.fl_bid)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputMobile" class="col-sm-4 col-form-label">Number of Beds</label>
                        <div class="col-sm-7 col-form-label">
                            @Html.DisplayFor(model => model.r_size)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputPassword2" class="col-sm-4 col-form-label">Room Availability</label>
                        <div class="col-sm-7 col-form-label">
                            @Html.DisplayFor(model => model.r_availability)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-auto">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.r_id }, new { @class = "btn btn-primary btn-rounded btn-fw" })
                        </div>
                        <div class="col-auto">
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-light btn-rounded btn-fw" })
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@model XyTech.Models.tb_room

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Room", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Floor</h4>
                <p class="card-description">
                    Add a new floor by filling the form below.
                </p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="forms-sample">

                <div class="form-group row">
                    <label for="l_name" class="col-sm-3 col-form-label">Room No.</label>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.r_no, new { htmlAttributes = new { @class = "form-control", placeholder = "Room Number", required = "required" } })
                        @Html.ValidationMessageFor(model => model.r_no, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="l_contact" class="col-sm-3 col-form-label">Building Name</label>
                    <div class="col-sm-9">
                        @Html.DropDownList("r_floor", null, htmlAttributes: new { @class = "form-control", placeholder = "Select a building", required = "required" })
                        @Html.ValidationMessageFor(model => model.r_floor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="l_name" class="col-sm-3 col-form-label">Price (RM)</label>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.r_price, new { htmlAttributes = new { @class = "form-control", placeholder = "Room Rental Price", required = "required" } })
                        @Html.ValidationMessageFor(model => model.r_price, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="l_fee" class="col-sm-3 col-form-label">Number of Beds</label>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.r_size, new { htmlAttributes = new { @class = "form-control", placeholder = "Number of Beds", required = "required" } })
                        @Html.ValidationMessageFor(model => model.r_size, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="l_due" class="col-sm-3 col-form-label">Room Availability</label>
                    <div class="col-sm-9">
                        @{
                            List<SelectListItem> availabilityOptions = new List<SelectListItem>
                                                                {
                                new SelectListItem { Text = "Available", Value = "1" },
                                new SelectListItem { Text = "Unavailable", Value = "0" }
                            };
                        }
                        @Html.DropDownListFor(model => model.r_availability, availabilityOptions, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.r_availability, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="l_bankname" class="col-sm-3 col-form-label">Room Picture</label>
                    <div class="col-sm-9">
                        @Html.TextBox("roompic", "", new { type = "file", accept = "image/*", required = "required" })
                        @Html.ValidationMessageFor(model => model.r_pic, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.Hidden("r_active", "active")

                <div class="form-group row">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary btn-rounded btn-fw">Submit</button>
                    </div>
                    <div class="col-auto">
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-light btn-rounded btn-fw" })
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
}